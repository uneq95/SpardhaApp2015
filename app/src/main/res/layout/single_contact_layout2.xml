<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_linear_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:drawable/alert_light_frame"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ivTeamMemberPic"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:scaleType="fitCenter"
        android:src="@drawable/face_rit" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/ivTeamMemberPic"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTeamMemberName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/ivTeamMemberPic"
            android:text="Name"
            android:textColor="#07040c"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvTeamMemberEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvTeamMemberName"
            android:layout_toRightOf="@id/ivTeamMemberPic"
            android:text="Designation" />
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_margin="5dp"
        android:background="#f6f6f6"
        android:src="@drawable/ic_call_black_18dp" />

</RelativeLayout>
