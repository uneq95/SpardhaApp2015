<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/background_card"
    android:layout_margin="5dp" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <com.ritesh.spardha.custom_views.RoundedImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/testi_img"
        android:src="@drawable/ic_no_pic"

        android:scaleType="fitCenter"
        android:layout_margin="3dp"
        android:layout_centerVertical="true" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_toRightOf="@id/testi_img">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/tvTestDesc"
            android:paddingLeft="5dp"
            android:textStyle="italic"
            android:layout_marginLeft="5dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvTestDesc"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Small Text"
                android:id="@+id/tvTestiCeleb"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textColor="@color/ColorPrimary"
                android:textStyle="bold"
                android:layout_marginRight="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Small Text"
                android:id="@+id/tvTestiCelebDesg"
                android:layout_below="@+id/tvTestiCeleb"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="5dp" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>