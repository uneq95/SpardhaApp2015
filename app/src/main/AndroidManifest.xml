<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ritesh.spardha.spardha2015" >

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />


    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Act2"
            android:label="@string/title_activity_act2" />
        <activity
            android:name=".MainActivity"
            android:label="Spardha Home" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ritesh.spardha.CustomizeGallery.GalleryMainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:theme="@style/Gallerytheme">

        </activity>
        <activity
            android:name="com.ritesh.spardha.CustomizeGallery.DetailActivity"
            android:parentActivityName="com.ritesh.spardha.CustomizeGallery.GalleryMainActivity"
            android:label="@string/detail"
            android:theme="@style/Gallerytheme">

        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value="com.ritesh.spardha.CustomizeGallery.GalleryMainActivity" />
        </activity>
        <activity
            android:name=".LocationActivity"
            android:label="Locations" >
        </activity>
        <activity android:name="com.ritesh.spardha.CustomizeGallery.GallerBaseActivity"
            android:label="@string/app_name">
        </activity>
        <activity android:name=".FadingActionBar"
            android:label="Sports"/>
    </application>

</manifest>
